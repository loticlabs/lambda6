# Using the recommended ESLint settings
extends: "eslint:recommended"

env:
  es6: true
  mocha: true
  node: true

ecmaFeatures:
  modules: true

# Configured to use Babel parser
parser: "babel-eslint"

rules:
  # Possible Errors
  no-unexpected-multiline: 2
  # Best Practices
  complexity: [2, 11]
  curly: 2
  eqeqeq: 2
  guard-for-in: 2
  no-alert: 2
  no-caller: 2
  no-case-declarations: 2
  no-div-regex: 2
  no-empty-label: 2
  no-empty-pattern: 2
  no-eq-null: 2
  no-eval: 2
  no-extra-bind: 2
  no-floating-decimal: 2
  no-implied-eval: 2
  no-iterator: 2
  no-lone-blocks: 2
  no-loop-func: 2
  no-magic-numbers: 2
  no-multi-spaces: 2
# no-native-reassign: 2
  no-new-func: 2
  no-new-wrappers: 2
  no-new: 2
  no-octal-escape: 2
  no-octal: 2
  no-param-reassign: 2
  no-proto: 2
  no-return-assign: 2
  no-self-compare: 2
  no-throw-literal: 2
  no-unused-expressions: 2
  no-useless-call: 2
  no-useless-concat: 2
  no-void: 2
  no-with: 2
  radix: 2
  wrap-iife: 2

  # Variables
  no-catch-shadow: 2
  no-delete-var: 2
  no-label-var: 2
  no-shadow-restricted-names: 2
  no-undef-init: 2
  no-undef: 2
  no-use-before-define: 2

  # Node.js and CommonJS
  callback-return: 2
  global-require: 2
  handle-callback-err: 2
  no-path-concat: 2
  no-process-exit: 2
  no-var: 2
